{
  "name": "@commitlint/root",
  "description": "Lint commit messages",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b --watch",
    "clean": "tsc -b --clean && lerna clean --yes && lerna exec 'git clean -xdf lib' && git clean -xdf node_modules",
    "commit": "node @commitlint/prompt-cli/cli.js",
    "deps": "lerna run deps",
    "pkg": "lerna run pkg",
    "docs": "docsify serve docs",
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier **/*.{ts,js,json,yml,md} -l",
    "format-fix": "prettier **/*.{ts,js,json,yml,md} --write",
    "publish": "lerna publish --conventional-commits --dist-tag release-v18",
    "reinstall": "yarn clean && yarn install",
    "start": "yarn watch",
    "test": "cross-env HOME=$PWD NODE_OPTIONS=--experimental-vm-modules jest",
    "test-ci": "yarn test --runInBand",
    "prepare": "husky"
  },
  "commitlint": {
    "extends": [
      "./@commitlint/config-conventional",
      "./@commitlint/config-lerna-scopes"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "lint-staged": {
    "*.{ts,js,json,yml,md}": [
      "prettier --write"
    ]
  },
  "renovate": {
    "rangeStrategy": "update-lockfile",
    "ignorePaths": [
      "**/fixtures/**/package.json"
    ],
    "extends": [
      "config:base",
      ":semanticCommitType(chore)",
      ":semanticCommitScopeDisabled"
    ],
    "ignoreDeps": [
      "@commitlint/test",
      "@commitlint/test-environment",
      "@commitlint/utils"
    ]
  },
  "workspaces": [
    "@alias/*",
    "@commitlint/*",
    "@packages/*"
  ],
  "engines": {
    "node": ">=v18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/conventional-changelog/commitlint.git"
  },
  "bugs": {
    "url": "https://github.com/conventional-changelog/commitlint/issues"
  },
  "homepage": "https://github.com/conventional-changelog/commitlint#readme",
  "keywords": [
    "conventional",
    "conventional-changelog",
    "log",
    "changelog",
    "lint",
    "check"
  ],
  "author": {
    "name": "Mario Nebl",
    "email": "hello@herebecode.com"
  },
  "devDependencies": {
    "@lerna/project": "^6.0.0",
    "@swc/core": "^1.3.93",
    "@swc/jest": "^0.2.28",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cross-env": "^7.0.3",
    "docsify-cli": "^4.4.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "husky": "^9.0.6",
    "jest": "^29.6.2",
    "lerna": "^6.0.0",
    "lint-staged": "15.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.2.2"
  }
}
